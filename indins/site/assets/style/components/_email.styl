.email-block
  cursor pointer
  font-size: (18/$base-font-size)em
  font-weight 700
  display: flex
  justify-content: flex-start
  align-items: center

  svg
    width: 1.1em
    height: 1.1em
  &.email-block_white
    color: $white
    &:hover
      color: $font-hover-orange
    svg
      path,
      rect,
      polygon
        fill: currentColor

  &__text
    padding-left 0.9em
    min-width 160px