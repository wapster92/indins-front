.blog-grid-item
  position: relative
  display: flex
  justify-content: flex-start
  align-items: stretch
  flex-direction: column
  &:hover
    .blog-grid-title
      color: $prj-color-tile-text-hover

  &>*
    &:nth-last-child(2)
      &:not(.blog-grid-footer)
        margin-bottom: 20px

  .blog-grid-title
    font-size: 22px
    line-height: (30/25)
    color: $prj-color-text

  .blog-grid-img + .blog-grid-title
    margin-top: 34px

  .blog-grid-img
    position: relative
    display: block
    text-decoration: none
    width: 100%
    height: 0
    padding-top: 72%
    overflow: hidden
    @media only screen and (max-width: 599px)
      padding-top: 70%

    &::before
      content: ''
      position: absolute
      z-index: 1
      width: 100.5%
      height: 100.5%
      top: 0
      left: 0
      background-repeat: no-repeat
      background-position center center
      background-size: cover
      background-image: inherit

      transform-origin: center center
      transform: scale(1)

      transition: transform $img-animation-time $img-animation-ease
      will-change: transform

    &>img
      position: relative
      z-index: 2
      display: block
      vertical-align: top
      width: 100%
      height: 100%
      opacity: 0

    &:hover
      cursor: pointer
      text-decoration: none
      &::before
        transform: scale($img-animation-scale)

  .blog-grid-footer
    margin-top: auto

    .is-flex
      display: flex
      justify-content: space-between
      align-items: center
      margin: -.5em
      opacity: .6
      transition: opacity $img-animation-time $img-animation-ease
      &>*
        margin: .5em
        &:nth-last-child(2)
          margin-right: 1em
        &:last-child
          margin-left: auto

      .icon-block
        display: flex
        justify-content: flex-start
        align-items: center
        margin: -.5em
        &>*
          margin: .5em
          display: block

        .icon
          position: relative
          width: 26px
          height: 14px
          background-repeat: no-repeat
          background-size: contain
          background-position: center
          background-image: url('/img/eye_down.svg')

        .views
          position: relative
          color: #9a9a9a
          margin-left: 17px

      .blog-item-url
        position: relative
        display: block
        &:hover
          color $prj-color-tile-arrow-hover

        .icon
          display: block
          width: 45px
          height: 32px

          path, rect,
          polygon
            fill: currentColor
  &:hover
    .blog-grid-footer
      .is-flex
        opacity: 1
