
// Detailing
// ============================================================
.portfolio-tile-proektmontag

  .is-back-color
    z-index: 1

    width: 100%
    height: 100%
    top: 0
    left: 0

    background-color: #FEA742
  .is-back-black-color
    z-index: 2

    width: 100%
    height: 100%
    top: auto
    bottom: 0
    left: 0

    background-color: #272E40

  .is-back
    z-index: 2
    background-size: cover
    background-position: right bottom

    width: 100%
    height: 100%
    top: auto
    bottom:35%

    transform-origin: center
    transform: scale(1)
    transition: transform 1.8s $prj-ease-easeInOutCubic, bottom .5s $prj-ease-easeInOutCubic
    transition-delay: 0s

  .is-logo-name
    z-index: 3
    background-size: contain
    background-position: left

    width: 100%
    height: 5%
    top: 11%;
    left: 5%;

    transform-origin: top center
    transform: translate3d(0, 0, 0)
    transition: transform .5s $prj-ease-easeInOutCubic
    transition-delay: 0s


  &:hover
    .is-back
      bottom: 45%

    .is-logo-name
      transform: translate3d(13%, 10%, 0) scale(1.25);

.portfolio-item--tall
  .portfolio-tile-proektmontag
    .is-back
      bottom: 21%;
      height: 79%
      background-position: 25% bottom;
      transition background-position 2s $prj-ease-easeInOutCubic
      @media $display-breakpoints.xs-only
        width: 100%
        height: 100%
        bottom:35%
        background-position: right bottom
        transition: transform 1.8s $prj-ease-easeInOutCubic, bottom .5s $prj-ease-easeInOutCubic
    .is-logo-name
      width: 61%;
      height: 5%;
      top: 8%;
      left: 0;
      right: 0;
      margin: 0 auto;
      transform-origin: center;
      @media $display-breakpoints.xs-only
        width: 100%
        height: 5%
        top: 11%;
        left: 5%;
        transform-origin: top center;
    &:hover
      .is-back
        bottom: 21%;

        background-position: 99% bottom;
        @media $display-breakpoints.xs-only
          background-position: right bottom
          bottom: 45%
      .is-logo-name
        transform: scale(1.3);
        @media $display-breakpoints.xs-only
          transform: translate3d(13%, 10%, 0) scale(1.25);
.portfolio-item--square
  .portfolio-tile-proektmontag
    .is-back
      bottom: 32%;
      height: 68%;
      background-position: 0 bottom;
      transition background-position 2s $prj-ease-easeInOutCubic
      @media $display-breakpoints.xs-only
        width: 100%
        height: 100%
        bottom:35%
        background-position: right bottom
        transition: transform 1.8s $prj-ease-easeInOutCubic, bottom .5s $prj-ease-easeInOutCubic
    .is-logo-name
      width: 54%;
      height: 6%;
      top: 11%;
      left: 12%;
      @media $display-breakpoints.xs-only
        width: 100%
        height: 5%
        top: 11%;
        left: 5%;
    &:hover
      .is-back
        background-position: 100% bottom;
        @media $display-breakpoints.xs-only
          background-position: right bottom
          bottom: 45%
      .is-logo-name
        transform: translate3d(4%, -2%, 0) scale(1.1);
        @media $display-breakpoints.xs-only
          transform: translate3d(13%, 10%, 0) scale(1.25);