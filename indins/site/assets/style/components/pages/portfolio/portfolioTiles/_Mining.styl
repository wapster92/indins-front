
// Mining
// ============================================================
.portfolio-tile-mining
  &:hover
    & .is-details
      transform: translateY(calc(-53% - 18px))
    & .is-bgc-h
      opacity: 1;

  & .is-bgc,.is-bgc-h
    z-index: 1;
    top: 0;
    left: 0;
    width: 754px;
    height: 366px;
    position: absolute;
    background-size: contain;
    transition: opacity .6s ease;
  & .is-bgc-h
    z-index: 2;
    opacity: 0;
  & .is-details
    position: absolute;
    background-position: center;
    background-size: contain;
    z-index: 3;
    width: 469px;
    height: 298px;
    top: 50%;
    transform: translateY(-53%)
    transition: transform 0.6s ease;
  & .is-back
    background: #5CAC98;
  @media only screen and (max-width 599px)
    & .is-bgc,.is-bgc-h
      left: 0;
      width: 100%;
      height: 100%;
    & .is-details
      width: 62.29%;
      height: 81.4%;
      left: 21.5%;
      top: 48%;
.portfolio-item--long //горизонтальная плашка
  & .portfolio-tile-mining
    @media only screen and (min-width 600px) and (max-width 849px)
      & .is-bgc,.is-bgc-h
        left: 0;
        width: 100%;
        height: 100%;
      & .is-details
        width: 62.29%;
        height: 81.4%;
        left: 21.5%;
        top: 48%;
      & .portfolio-bottom
        padding: 0 20px;
    @media only screen and (min-width 850px) and (max-width 1263px)
      & .is-bgc,.is-bgc-h
        width: 591px;
        height: 285px;
      & .is-details
        width: 368px;
        left: 127px;
        top: 139px;
      &:hover
        & .is-details
          transform: translateY(calc(-54.5% - 17px))
    @media only screen and (min-width 1264px)
      & .is-details
        width: 469px;
        height: 298px;
        left: 21.3%;
        transform: translateY(-55%);
      &:hover
        & .is-details
          transform: translateY(calc(-55% - 17px))
.portfolio-item--tall //вертикальная
  & .portfolio-tile-mining
    @media only screen and (min-width 600px)
      & .portfolio-bottom
        padding: 0 20px;
      & .is-details
        left: -160px;
      & .is-bgc,.is-bgc-h
        top: 50%;
        left: -320px;
        transform: translateY(-48.4%)
    @media only screen and (min-width 600px) and (max-width 849px)
      & .is-details
        width: calc(591px * 0.6229)
        height: calc(285px * 0.814)
        left: -125px;
      & .is-bgc,.is-bgc-h
        left: -250px;
        width: 591px;
        height: 285px;
    @media only screen and (min-width 960px) and (max-width 1263px)
      & .is-details
        left: -54.5%;
      & .is-bgc,.is-bgc-h
        left: 50%;
        transform: translate(-61%, -48.4%)
      & .portfolio-bottom
        padding: 0 38px;
    @media only screen and (min-width 1264px)
      & .is-details
        left: -31.7%;
      & .is-bgc,.is-bgc-h
        left: 50%;
        transform: translate(-61%, -48.4%)

.portfolio-item--square //квадратная плашка
  & .portfolio-tile-mining
    @media only screen and (min-width 600px) and (max-width 849px)
      & .is-bgc,.is-bgc-h
        width: 400px;
        height: 195px;
        left: -120px;
      & .is-details
        height: 158.73px;
        width: 249.16px;
        left: -35px;
        top: 95px;
    @media only screen and (min-width 850px) and (max-width 1263px)
      & .is-bgc,.is-bgc-h
        width: 591px;
        height: 285px;
        left: -200px;
      & .is-details
        width: 368px;
        left: -75px;
        top: 139px;
      &:hover
        & .is-details
          transform: translateY(calc(-54.5% - 17px))
    @media only screen and (min-width 1264px)
      & .is-bgc,.is-bgc-h
        left: -74%;
        top: -14%;
      & .is-details
        transform: translate(-110px, -72%)
      &:hover
        & .is-details
          transform: translate(-110px, calc(-72% - 14.5px))









