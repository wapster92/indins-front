.portfolio-tile-oknokomp

  .is-back
    z-index: 1

    width: 130%
    height: 130%
    left: -25%
    top: -3%

    transform: translate3d(0, 0, 0)
    transition: transform 7s $prj-ease-easeInOutSine
    transition-delay: 0s

  .is-curtain
    z-index: 2
    background-size: contain
    transform-origin: center
    background-position: right center
    opacity: .9

    width: 100%;
    height: 105%;
    top: -7%;
    left: unset;
    right: -8%;

    transform: translate3d(0, 0, 0)
    transition: transform .7s $prj-ease-easeInOutCirc
    transition-delay: 0.2s

  .is-logo
    z-index: 3
    background-size: contain
    transform-origin: center
    background-position: left center

    width: 28%;
    height: 28%;
    top: 11%;
    left: 5%;

    transform: translate3d(0, 0, 0)
    transition: transform .5s $prj-ease-easeInOutCirc
    transition-delay: 0s

  &:hover
    .is-back
      transform: translate3d(17%, -19%, 0)

    .is-curtain
      transform: translate3d(6%, 0, 0)
      transition-delay: 0s


    .is-logo
      transform: scale(1.2) translate3d(7%, 8%, 0);
      transition-delay: 0.2s

.portfolio-item--tall
  .portfolio-tile-oknokomp
    .is-curtain
      width: 140%;
      height: 129%;
      top: -28%;
      left: unset;
      right: -31%;
      @media $display-breakpoints.xs-only
        width: 100%;
        height: 105%;
        top: -7%;
        left: unset;
        right: -8%;
    .is-logo
      width: 21%;
      height: 18%;
      top: 7%;
      left: 11%;
      @media $display-breakpoints.xs-only
        width: 28%;
        height: 28%;
        top: 11%;
        left: 5%;

    &:hover
      .is-curtain
        transform: translate3d(16%, 0, 0);
        @media $display-breakpoints.xs-only
          transform: translate3d(6%, 0, 0)

.portfolio-item--square
  .portfolio-tile-oknokomp
    .is-curtain
      right: -16%;
      @media $display-breakpoints.xs-only
        right: -8%;
    .is-logo
      left: 10%;
      @media $display-breakpoints.xs-only
        left: 5%;
    &:hover
      .is-curtain
        transform: translate3d(14%, 0, 0);
        @media $display-breakpoints.xs-only
          transform: translate3d(6%, 0, 0)
