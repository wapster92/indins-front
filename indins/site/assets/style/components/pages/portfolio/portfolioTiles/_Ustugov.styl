
// Ustugov
// ============================================================
.portfolio-tile-ustugov

  .is-back
    z-index: 1
    background-color: #000

  .is-pic
    z-index: 2
    transform-origin: bottom center
    //transform: scale(1)
    filter: grayscale(100%)
    transition: transform 2s $prj-ease-easeInOutCubic, filter .5s $prj-ease-easeInOutCubic

  .is-logo
    z-index: 3
    background-position: left center
    background-size: contain

    width: 48%;
    height: 15%;
    left: 5%;
    top: 11%;

    transform-origin: top center
    transform: translate3d(0, 0, 0)
    transition: transform .5s $prj-ease-easeInOutCirc

  &:hover
    .is-pic
      //transform: scale(1.05)
      filter: grayscale(0%)
    .is-logo
      transform: scale(1.2) translate3d(9%, 0%, 0);

.portfolio-item--tall
  .portfolio-tile-ustugov
    .is-pic
      background-position: 34% center;
      @media $display-breakpoints.xs-only
        transform-origin: bottom center
    .is-logo
      width: 35%;
      height: 8%;
      left: 11%;
      top: 6%;
      @media $display-breakpoints.xs-only
        width: 48%;
        height: 15%;
        left: 5%;
        top: 11%;
.portfolio-item--square
  .portfolio-tile-ustugov
    .is-pic
      background-position: 0% center;
      @media $display-breakpoints.xs-only
        transform-origin: bottom center
    .is-logo
      width: 35%;
      height: 11%;
      left: 11%;
      top: 11%;
      @media $display-breakpoints.xs-only
        width: 48%;
        height: 15%;
        left: 5%;
        top: 11%;