
// Detailing
// ============================================================
.portfolio-tile-fish

  .is-back
    transition: transform 5s $prj-ease-easeInOutSine

  .is-sea
    z-index: 2
    background-size: cover

    width: 100%
    height: 100%
    top: 0
    left: 0

    transform-origin: center
    transform: scale(1)
    transition: transform .8s $prj-ease-easeInOutSine
    transition-delay: 0s

  .is-wave
    z-index: 3

  .is-wave-one
    z-index: 4
    background-size: contain
    background-position: left center

    width: 230%
    height: 10%
    top: 50%
    left: 0

    opacity: .2

    transform-origin: center
    transform: translate3d(0, 0, 0)
    transition: transform 8s $prj-ease-easeInOutSine
    transition-delay: 0s
    @media only screen and (max-width: 399px)
      width: 140%
      height: 21%
      top: 50%
      left: 0

  .is-wave-two
    z-index: 5
    background-size: contain
    background-position: left center

    width: 230%
    height: 10%
    top: 52%
    left: -42%

    opacity: .3

    transform-origin: center
    transform: translate3d(0, 0, 0) scale(.8)
    transition: transform 10s $prj-ease-easeInOutSine
    transition-delay: 0s
    @media only screen and (max-width: 399px)
      width: 140%
      height: 21%
      top: 52%
      left: -27%
      transform: translate3d(0, 0, 0)

  .is-wave-three
    z-index: 6
    background-size: contain
    background-position: left center

    width: 230%
    height: 10%
    top: 55%
    left: -35%

    opacity: .5

    transform-origin: center
    transform: translate3d(0, 0, 0) rotate(180deg)
    transition: transform 7s $prj-ease-easeInOutSine
    transition-delay: 0s
    @media only screen and (max-width: 399px)
      width: 140%
      height: 21%
      top: 55%
      left: -38%

  .is-ship
    z-index: 7
    background-size: contain
    background-position: center

    width: 100%
    height: 13%
    top: 47%
    left: 0

    transform-origin: center
    transform: translate3d(0, 0, 0) rotate(2deg)
    transition: transform 7s $prj-ease-easeInOutSine
    transition-delay: 0s
    @media only screen and (max-width: 399px)
      width: 50%
      height: 23%
      top: 43%
      left: 1%
      transition: transform 11s $prj-ease-easeInOutSine

  .is-logo
    z-index: 8
    background-position: center
    background-size: contain

    width: 32%
    height: 21%
    left: 40px
    top: 40px

    transform-origin: center
    transform: translate3d(0, 0, 0)
    transition: transform .8s $prj-ease-easeInOutSine
    transition-delay: 0s
    @media screen and (max-width 1203px)
      left: 25px
      top 25px
      width: 20%
    @media only screen and (max-width: 399px)
      height: 25%
      transition: transform 5s $prj-ease-easeInOutSine

  &:hover
    .is-sea
      transform: scale(1.15)
    .is-wave-one
      transform: translate3d(-50%, 0, 0)
      @media only screen and (max-width: 399px)
        transform: translate3d(-19%, 0, 0)
    .is-wave-two
      transform: translate3d(7%, 0, 0) scale(0.8)
      @media only screen and (max-width: 399px)
        transform: translate3d(18%, 0, 0)
    .is-wave-three
      transform: translate3d(-41%, 0, 0) rotate(180deg)
      @media only screen and (max-width: 399px)
        transform: translate3d(18%, 0, 0) rotate(180deg)
    .is-ship
      transform: translate3d(0, 0, 0) rotate(-7deg)
      @media only screen and (max-width: 399px)
        transform: translate3d(65%, 0, 0) rotate(-7deg)
    .is-logo
      transform: translate3d(0, 30%, 0)
      @media only screen and (max-width: 399px)
        transform: translate3d(0, 20%, 0)
    .is-back
      transform scale(1.4)