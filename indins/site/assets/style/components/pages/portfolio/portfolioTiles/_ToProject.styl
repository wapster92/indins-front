.main-page .portfolio-item:last-child
  @media $display-breakpoints.xs-only
    display: none;
  
.portfolio-tile-to-project
  //background: url("/img/projectBlocks/to-project/back.png")
  position: relative
  display: flex !important;
  justify-content: center;
  align-items: center;
  &:hover
    .portfolio-bottom
      background-color: #637ea8;
      transform translate3d(20px, -20px, 0)
      @media $display-breakpoints.sm-and-down
        transform translate3d(10px, -10px, 0)
    .portfolio-bottom-wrap
      transform translate3d(-10px, 10px, 0)
      @media $display-breakpoints.sm-and-down
        transform translate3d(-5px, 5px, 0)
  .is-back
    z-index: auto;
  .portfolio-bottom-wrap
    width: 245px;
    max-width 245px
    height: 64px;
    content: '';
    display: flex;
    background-color: #fff;
    position: absolute;
    z-index: 2;
    transition: 0.5s;
    @media $display-breakpoints.sm-and-down
      width: 200px;
      max-width 200px
      height: 53px;
    @media (max-width 765px)
      width: 160px;
      max-width 160px
      height: 48px;
    .portfolio-bottom
      border: 1px solid #637EA8;
      background-color: #414a69;
      width: 100%
      height: 100%;
      max-width 245px
      display: flex;
      flex-flow: row;
      justify-content: center;
      align-items: center;
      left: unset;
      bottom: unset;
      padding: 0 20px;
      @media (max-width 765px)
        padding: 0 15px;

    .portfolio-type
      padding-right: 40px;
      padding-left: 25px;
      color: #fff;
      font-size: 21px;
      @media $display-breakpoints.sm-and-down
        padding-left: 0
        padding-right: 20px
      @media (max-width 765px)
        font-size: 18px
        padding-right: 15px

    .portfolio-description
      height: 34px
      width: 48px;
      min-width: 48px;
      background-size: contain;
      background-image: url('/img/arrow_btn.svg');
      background-repeat: no-repeat;
      background-position center
      @media (max-width 765px)
        height: 25px;
        width: 35px;
        min-width: 35px;






