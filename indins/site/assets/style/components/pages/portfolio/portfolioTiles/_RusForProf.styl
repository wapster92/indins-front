      .is-girl
        transform: scale(1.02) translate3d(-12%, -1%, 0);
        @media $display-breakpoints.xs-only
          transform: scale(1.2) translate3d(-4%, 0, 0);
          background-position: 0 105%;
      .is-petal-1
        transform: rotate(50deg) translate3d(80%, -184%, 0);
        @media $display-breakpoints.xs-only
          transform: rotate(-27deg) translate3d(12%, -44%, 0);
      .is-petal-2
        transform: rotate(33deg) translate3d(417%, -101%, 0);
        @media $display-breakpoints.xs-only
          transform: rotate(-44deg) translate3d(50%, -52%, 0);
