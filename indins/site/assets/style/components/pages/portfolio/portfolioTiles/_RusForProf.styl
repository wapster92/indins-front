        top: 0
        left: -3%
        width: 107%
        height: 100%
    .is-logo-part-text
      width: 33%;
      height: 14.89%;
      top: 10%;
      left: 11%;
      @media $display-breakpoints.xs-only
        width: 22%;
        height: 20.89%;
        top: 9%;
        left: 5%;
    .is-petal-1
      left: 28.5%;
      width: 15%;
      height: 20%;
      top: 40%;
      @media $display-breakpoints.xs-only
        left: 29.5%;
        width: 13%;
        height: 25%;
        top: 45%;
    .is-petal-2
      width: 9%;
      height: 9%;
      top: 32%;
      right: 50%;
      @media $display-breakpoints.xs-only
        width: 7%;
        height: 15%;
        top: 26%;
        right: 52%;

