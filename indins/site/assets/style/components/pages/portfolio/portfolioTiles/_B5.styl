.portfolio-tile-b5

  &::after
    content ""
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
    background: linear-gradient(225deg, rgba(0, 0, 0, 0) 55.04%, #000000 117.11%);

  .is-back
    z-index: 1
    transform-origin: center
    transform: scale(1)
    transition: transform 1s $prj-ease-easeInOutCubic
    background-position: 79%

  .is-logo
    z-index 5
    width: 70px
    height: 80px
    left: 40px
    top: 40px    
    background-size: contain
    background-color: rgba(0,0,0,0.4)
    box-shadow: 0 0 40px 40px rgba(0,0,0,0.4)
    transform-origin: top center
    transform: translate3d(-11%, -10%, 0)
    transition: transform .5s $prj-ease-easeInOutCirc
    @media screen and (max-width 1203px)
      left: 25px
      top 25px
    @media screen and (max-width 599px)
      width: 15%
      height: 30%
      transform: translate3d(-7%, 0, 0)

