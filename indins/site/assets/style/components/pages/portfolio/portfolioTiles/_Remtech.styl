
// Detailing
// ============================================================
.portfolio-tile-remtech

  .is-back
    z-index: 1

    width: 100%
    height: 100%
    top: 0
    left: 0

    background: #e1e1e8

    transition: background 1s $prj-ease-easeInOutCubic

  .is-chip
    z-index: 2
    background-size: contain
    background-position: left center

    width: 160%
    height: 120%
    @media only screen and (max-width: 399px)
      width: 160%
      height: 120%

  .is-chip-one
    z-index: 3

    top: 5%
    left: 30%

    transform-origin: center
    transform: scale(-1, 1) translate3d(0, 0, 0)
    transition: transform 1s $prj-ease-easeInOutCubic
    transition-delay: 0.2s
    @media only screen and (max-width: 399px)
      top: -6%
      left: -111%

  .is-chip-two
    z-index: 4

    top: -10%
    left: -161%

    transform-origin: center
    transform: scale(-1, 1) translate3d(0, 0, 0)
    transition: transform 1s $prj-ease-easeInOutCubic
    transition-delay: 0s
    @media only screen and (max-width: 399px)
      top: -10%
      left: 130%

  .is-logo
    z-index: 5
    background-position: left center
    background-size: contain

    width: 90px;
    height: 85px;
    top: 40px
    left: 40px

    transform-origin: center
    transform: translate3d(0, 0, 0)
    transition: transform 1s $prj-ease-easeInOutCubic,  left 1s $prj-ease-easeInOutCubic
    transition-delay: 0.1s, 0.1s
    @media screen and (max-width 1203px)
      left: 25px
      top 25px
    @media only screen and (max-width: 959px)
      width: 75px

  &:hover
    .portfolio-bottom
      color white
    .is-back
      background: #031b21
    .is-chip-one
      transform: scale(-1, 1) translate3d(-50%, 0, 0)
      transition-delay: 0s
      @media only screen and (max-width: 399px)
        transform: scale(-1, 1) translate3d(50%, 0, 0)
    .is-chip-two
      transform: scale(-1, 1) translate3d(-50%, 0, 0)
      transition-delay: 0.2s
      @media only screen and (max-width: 399px)
        transform: scale(-1, 1) translate3d(50%, 0, 0)
    .is-logo
      transform: scale(1.2)
      left calc(100% - 25px - 108px)
      transition-delay: 0.1s
      @media only screen and (max-width: 959px)
        left calc(100% - 25px - 90px)
      @media only screen and (max-width: 399px)
        transform: translate3d(-131%, 0, 0) scale(1.2)