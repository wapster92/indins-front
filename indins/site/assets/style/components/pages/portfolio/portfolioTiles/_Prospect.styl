      width: 224%;
      height: 103%;
      left: -100%;
      top: -2%;
      @media $display-breakpoints.xs-only
        width: 119%;
        height: 113%;
        left: -10%;
        top: -13%;
    .is-logo
      left: 11%;
      right: auto;
      top: 4%;
      width: 62%;
      height: 8%;
      @media $display-breakpoints.xs-only
        width: 39%
        height: 10%
