.portfolio-tile-ukisp
  &:after
    content: ""
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #001343
    opacity: 0.15
    z-index: 1

  .portfolio-bottom
    text-shadow: none

  .is-back
    position: absolute;
    z-index: 0;
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-size: cover;
  .is-logo
    position: absolute;
    z-index: 2;
    width: 147px
    height: 62px;
    top: 36px
    left: 62px
    background-size: cover;

  .logo-back
    position: absolute;
    z-index: 1;
    top: 0
    left: -60px
    width: 385px
    height: 127px
    background: #DEF3FD;
    transform: skew(-30deg)

  .is-label
    position: absolute;
    z-index: 2;
    bottom: 0
    right: -143px
    top: auto;
    left: auto;
    width: 125px;
    height: 60px
    background: #009FE3;
    transform skew(-30deg)
    transition right .6s

  .is-red-label
    position: absolute;
    z-index: 2;
    top: -100px;
    left: 420px;
    background: #E30613;
    height: 100px;
    width: 50px
    transform skew(-30deg)
    transition: top .3s, left .3s

  &:hover
    .is-red-label
      top: -40px;
      left: 390px;

    .is-label
      right: -50px

.portfolio-item--tall
  .portfolio-tile-ukisp
    .is-logo
      width: 120px;
      height: 50px
      background-size: 100% auto;
      top: 30px;
      left: 30px;
      @media (max-width: 845px)
        width: 100px;
        top: 15px
        left: 20px
      @media $display-breakpoints.sm-and-down
        width: 100px;
        height: 40px
        top: 25px;
        left: 30px;
    .logo-back
      top: -20px;
      left: -186px;
      @media (max-width: 845px)
        left: -220px;
        top: -45px
      @media $display-breakpoints.sm-and-down
        top: -20px;
        left: -186px;
        width: 353px;
        height: 110px;
    .is-red-label
      left: 280px;
      @media (max-width: 845px)
        left: 220px;
      @media $display-breakpoints.sm-and-down
        left: 240px;
  &:hover
    .is-red-label
      left: 250px;
      @media (max-width: 845px)
        left: 195px;
      @media $display-breakpoints.sm-and-down
        left: 205px;

.portfolio-item--long
  .portfolio-tile-ukisp
    .is-logo
      @media (max-width: 845px)
        width: 133px;
        height: 56px;
        top: 20px;
        left: 25px;
      @media $display-breakpoints.sm-and-down
        width: 100px;
        height: 40px
        top: 25px;
        left: 30px;
    .logo-back
      @media (max-width: 845px)
        left: -180px;
        top: -30px;
      @media $display-breakpoints.sm-and-down
        top: -20px;
        left: -186px;
        width: 353px;
        height: 110px;
    .is-red-label
      @media (max-width: 845px)
        left: 280px
      @media $display-breakpoints.sm-and-down
        left: 240px;
    &:hover
      .is-red-label
        @media (max-width: 845px)
          left: 250px;
        @media $display-breakpoints.sm-and-down
          left: 205px;

.portfolio-item--square
  .portfolio-tile-ukisp
    .is-logo
      width: 100px;
      height: 40px
      top: 25px;
      left: 30px;
    .logo-back
      top: -20px;
      left: -186px;
      width: 353px;
      height: 110px;
    .is-red-label
      left: 240px;
    &:hover
      .is-red-label
        left: 205px;