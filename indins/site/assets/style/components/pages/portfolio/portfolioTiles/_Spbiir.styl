      width: 91%;
      top: 26%;
      right: -4%;
      @media $display-breakpoints.xs-only
        height: 62%
        width: 40%;
        top: -1%;
    .is-wave-back, .is-wave, .is-wave-fornt
      background-position: top;
      background-size contain
      @media $display-breakpoints.xs-only
