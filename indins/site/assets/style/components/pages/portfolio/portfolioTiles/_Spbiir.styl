        bottom: 0;
      &:before
        background: #6C80BA;
    .is-logo
      width: 27.4%;
      height: 21.4%;
      left: 10%;
      top: 1%;
      @media $display-breakpoints.xs-only
        width: 21.4%;
        height: 21.4%;
        left: 1%;
        top: 14%;

    &:hover
      .is-students
        transform: scale(1.1) translate3d(-8%, 0%, 0);
        @media $display-breakpoints.xs-only
          transform: scale(1.4) translate3d(-15%, 7%, 0)
      .is-logo
