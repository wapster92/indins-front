
// Detailing
// ============================================================
.portfolio-tile-detailing
  &:after
    content ""
    position: absolute;
    width: 100%
    height: 100%
    left: 0
    top: 0
    background: linear-gradient(16.48deg, #21302F -79.86%, rgba(33, 48, 47, 0) 90.8%);
    z-index: 2

  .is-back
    z-index: 1
    background-color: #D3D5D8

  .is-pic
    z-index: 2
    background-position: right bottom
    width: 100%
    transform-origin: bottom center
    transition: transform 1s $prj-ease-easeInOutSine

  .is-circle
    z-index: 3

    width: 78px
    height: 78px
    margin: 2px
    top: 40px
    left: 40px

    opacity: 1
    border-radius: 50%
    @media only screen and (max-width: 599px)
      width: 60px
      height: 60px
      left: 7%

  .is-circle-wave
    z-index: 4
    background-color: #FF6700

    transition: transform .5s $prj-ease-easeInOutBack
    will-change: transform
    transition-delay: 0.15s

  .is-circle-main
    z-index: 5
    background-color: #fff
    box-shadow: 0 0 10px rgba(0,0,0,0.15)

    transition: transform .5s $prj-ease-easeInOutBack
    transform: translate3d(-11%, 0, 0) scale(1)
    will-change: transform
    transition-delay: 0.1s

  .is-logo
    z-index: 6
    background-position: center
    background-size: contain
    width: 82px
    height: 82px
    top: 39px
    left: 39px
    transform-origin: center
    transition: transform .5s $prj-ease-easeInOutBack
    transition-delay: 0s

    @media only screen and (max-width: 599px)
      width: 60px
      height: 60px
      left: 7%

  &:hover
    .is-pic
      transform: scale(1.1)
    .is-circle-wave
      transform: scale(1.6)
    .is-circle-main
      transform: scale(1.2)
    .is-logo
      transform: scale(1.2)
