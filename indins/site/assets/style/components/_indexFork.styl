.fork-area
  &__container
    padding 0 24px
    margin auto
    width 100%
    height 100%
    @media $display-breakpoints.lg-and-up
      max-width 1188px
    @media $display-breakpoints.md-only
      max-width 944px
    @media $display-breakpoints.sm-and-down
      padding 1.2em

.fork-flex
  position: relative
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap
  font-size: 1em
  line-height: 1.2
  margin: (77/$base-font-size)em 0 0
  color: $primary
  text-align: center

  @media $display-breakpoints.md-only
    font-size: .8em
  @media only screen and (min-width: 770px) and (max-width: 959px)
    font-size: .7em
  @media only screen and (max-width: 769px)
    flex-direction: column
    margin: (30/$base-font-size)em 0 0
  @media only screen and (max-width: 489px)
    margin: (10/$base-font-size)em 0 0
  @media only screen and (max-width: 349px)
    font-size: .8em

  > *
    margin: 1.2em
    @media only screen and (min-width: 770px) and (max-width: 959px)
      margin: 1em
    @media only screen and (max-width: 769px)
      margin: (40/$base-font-size)em 0
    @media only screen and (max-width: 489px)
      margin: (28/$base-font-size)em 0
    &:last-child
      margin-bottom: (6/$base-font-size)em

  .icon-left
    @media only screen and (min-width: 770px)
      order: 1

  .arrow-block-left
    @media only screen and (min-width: 770px)
      order: 2
    @media only screen and (max-width: 769px)
      display: none

  .fork-item-title-block
    @media only screen and (min-width: 770px)
      order: 3

  .arrow-block-right
    @media only screen and (min-width: 770px)
      order: 4
    @media only screen and (max-width: 769px)
      display: none

  .icon-right
    @media only screen and (min-width: 770px)
      order: 5

  .arrow-block-down
    @media only screen and (min-width: 770px)
      order: 5

  .fork-item-title
    font-size: (50/$base-font-size)em
    max-width: 4em
    @media only screen and (max-width: 769px)
      font-size: (35/$base-font-size)em
      max-width: 8em

    .auto-triangle &
      max-width: 7em

  .fork-item-icon
    display: block
    .is-icon
      height: (95/$base-font-size)em
      > svg, img
        height: 100%
        max-width 100px;
        margin: 0 auto
        fill: #3f496a;
    .is-title
      font-weight: 400
      font-size: (35/$base-font-size)em
      max-width: 7.5em
      margin-top: (32/35)em
      margin-left: auto;
      margin-right: auto;
      @media only screen and (max-width: 769px)
        font-size: (25/$base-font-size)em
        max-width: 10em
        margin-top: (32/25)em
      @media only screen and (max-width: 489px)
        margin-top: (32/35)em

  .arrow-block-down
    width: 100%

  .fork-arrow
    & > span,
    & > .is-arrow
      position: relative
      display: block
      width: (45/$base-font-size)em
      height: (31/$base-font-size)em
      margin: 0 auto
      fill: #3f496a
      transition: fill .3s ease;
      &:hover
        fill: #e8a15a
    & > span,
    & > .is-arrow
      svg
        display: block
        max-width: 100%
        max-height: 100%
    &.down
      & > span
        transform: rotate(90deg)
        &:hover
          cursor: pointer

  .arrow-block-down
    @media only screen and (max-width: 769px)
      margin-top: (96/$base-font-size)em
    @media only screen and (max-width: 489px)
      margin-top: (48/$base-font-size)em
