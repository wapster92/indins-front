.port-order
  margin-top: 28px
  overflow-x: hidden
  @media screen and (max-width: 1100px)
    margin-top: 38px
  @media $display-breakpoints.xs-only
    margin-top: 23px
  &__icon
    position: relative;
    @media $display-breakpoints.xs-only
      width: 100px
      margin: 0 auto;
  &__number
    position: absolute;
    top: 4px;
    left: -7px;
    width: 42px
    height: 42px
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px
    color: #3F496A;
    border: 2px solid #637EA8;
    border-radius: 50%;
    background: #fff;
    @media screen and (max-width: 1100px)
      padding-top: 3px
  &__sprite
    width: 100%
    height: 85px
  &__list
    width: 100%
    max-width 964px
    margin: 0 auto

  &__item
    padding: 37px 50px 33px 51px;
    border: 1px solid #637EA8;
    margin-top: 42px;
    display: grid;
    grid-template-columns: 97px 1fr;
    grid-column-gap 33px
    position: relative;
    @media screen and (max-width: 1100px)
      border none
      padding: 20px 50px 20px 51px;
      margin-top: 0;
      grid-column-gap: 37px;
    @media $display-breakpoints.xs-only
      grid-template-columns: 1fr
      padding: 17px 0 16px 0;
    &:last-child
      .port-order__line
        display: none;
  &__title
    font-weight: 700
    font-size: 25px;
    line-height: 27px;
    color: #637EA8
    @media $display-breakpoints.xs-only
      margin-top: 10px
      text-align: center;
  &__text
    font-size: 20px;
    line-height: 27px;
    color: #494949;
    margin-top: 20px
  &__line
    position: absolute;
    top: 40%;
    width: 300px
    @media screen and (max-width: 1100px)
      display: none;
    &--left
      left: -184px;
    &--right
      right: -184px;
  &__line-icon
    height: 277px