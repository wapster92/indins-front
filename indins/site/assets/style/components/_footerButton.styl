.footer-button
  display: flex
  justify-content: center
  align-items: center
  margin-top: 53px
  @media $display-breakpoints.md-and-up
    padding-bottom: 26px
  @media $display-breakpoints.sm-only
    padding-bottom: 6px
  @media $display-breakpoints.xs-only
    margin-top: 43px


  .i-btn
    margin: 0
    flex unset

  &__btn
    flex 1
    align-self stretch
    display flex
    align-items center
    justify-content space-between
    margin -4px
    padding 0 28px 0 41px
    @media $display-breakpoints.sm-and-up
      min-width: 18.5em

    &__icon
      position relative
      width 48px
      height 34px
      margin-left: 1em;
      &:before
        content ''
        width 100%
        height: 100%
        position: absolute;
        top 0
        left 0
        opacity 0
        transition opacity 0.3s cubic-bezier(0.25, 0.8, 0.5, 1)
        background-repeat no-repeat
        background-size contain
        background-position center
        background-image url('/img/arrow_btn.svg')
      @media only screen and (max-width: 399px)
        width 44px
      &_transparent
        position: relative;
        width: 100%;
        height: 100%;
        opacity: 0.6;
        transition: opacity .3s cubic-bezier(.25,.8,.5,1);
        svg
          width: 100%;
          height: 100%;
          g
            path
              fill: $primary

    &:hover
      color: $white

      .footer-button__btn__icon
        &:before
          opacity .8
        &_transparent
          opacity 0
