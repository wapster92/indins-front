.footer
  position: relative
  z-index $header-layer
  display flex
  justify-content center
  align-content center

  &__container
    padding (75/$base-font-size)em 24px (71/$base-font-size)em 24px
    margin auto
    width 100%
    height 100%
    display flex
    flex-direction row
    justify-content space-between

    @media $display-breakpoints.lg-and-up
      max-width 1188px
    @media $display-breakpoints.md-only
      max-width 944px
      font-size: 0.9em
    @media $display-breakpoints.sm-and-down
      flex-direction: column
      justify-content center
      align-items center
      padding (58/$base-font-size)em 24px (58/$base-font-size)em 24px
      &:nth-child(1)
        order: 3
      &:nth-child(2)
        order: 2
      &:nth-child(3)
        order: 1

  &__company
    display flex
    flex-direction row
    align-items center

    @media $display-breakpoints.sm-and-down
      order: 3

    &__logo
      @media $display-breakpoints.sm-and-down
        display none
    &__name
      margin-left: (33/$base-font-size)em
      color: $primary
      @media $display-breakpoints.sm-and-down
        margin-left: 0

  &__socials, &__contacts
    display flex
    flex-direction column

  &__socials
    justify-content center
    padding-left 18px
    @media $display-breakpoints.sm-and-down
      margin (36/$base-font-size)em 0
      order: 2

  &__contacts
    justify-content center
    @media $display-breakpoints.sm-and-down
      order: 1