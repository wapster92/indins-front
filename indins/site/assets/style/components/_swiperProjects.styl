.swiper-projects
  &__container
    position relative
    padding 0 24px
    flex-grow 1
    margin auto
    width 100%
    height 100%
    @media $display-breakpoints.lg-and-up
      max-width 1288px
    @media $display-breakpoints.md-only
      max-width 800px

  .swiper-arrow-btn.swiper-arrow-next
    right: -45px
    @media screen and (max-width: 1320px) and (min-width: 1204px)
      display: none
    @media screen and (max-width: 1060px)
      display: none
  .swiper-arrow-btn.swiper-arrow-prev
    left: -45px
    @media screen and (max-width: 1320px) and (min-width: 1204px)
      display: none
    @media screen and (max-width: 1060px)
      display: none
  .swiper-slide
    width: 400px
    height: 370px
    @media $display-breakpoints.md-and-down
      height: 240px
      width: 240px;
    @media $display-breakpoints.sm-and-down
      height: 200px
      width: 200px;
    &.portfolio-item
      padding-bottom: 0
    &.grid-desktop-size-3x2
      width: 50%
    &.grid-desktop-size-2x2
      width: 33%
    &.grid-tablet-size-3x2
      @media $display-breakpoints.sm-and-md
        width: 50%
    &.grid-tablet-size-2x2
      @media $display-breakpoints.sm-and-md
        width: 33%
    &.grid-tablet-size-6x2
      @media $display-breakpoints.sm-and-md
        width: 100%
    &.grid-mobile-size-2x1
      @media screen and (max-width: 750px)
        width: 100%
  .portfolio-tile-roerich .is-mounts
    background-size: cover
    background-position: left top
  .portfolio-tile-rusforprof .is-logo-part-text
    @media $display-breakpoints.md-and-down
      top: 74px
  .portfolio-tile-polir
    .pii.is-pot
      background-position-x: right

  .slide-down-enter, .slide-down-leave-to
    opacity 1
    transform translateY(0)