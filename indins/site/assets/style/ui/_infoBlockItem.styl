  &__title
    position: relative
    line-height: 1.1
    margin-top: 36px
    @media $display-breakpoints.sm-and-up
      margin-right: -2px
    @media $display-breakpoints.xs-only
      margin-top: 26px

    &:first-child
      margin-top: 0

    &.light-title
      font-size: (22/$base-font-size)em
      line-height: (27/22)
      margin-top: 33px

    &.small-title
      font-size: (20/$base-font-size)em
      line-height: 1.35

  .icon-left + .info-block-item__title
    margin-top: 0

  &__text
    position: relative
    margin-top: 32px
    @media $display-breakpoints.xs-only
      margin-top: 20px
    &--center
      text-align: center;

    &:first-child
      margin-top: 0

    &.text-primary
      font-size: 22px
      line-height: 1.2

  .light-title + .info-block-item__text
    margin-top: 28px

  .small-title + .info-block-item__text
    margin-top: 28px

  .info-block-item__icon + .info-block-item__ext
    margin-top: 34px

  .icon-left + .info-block-item__text
    margin-top: 0

  &.flex-item
    width: auto
    margin: 1em

    .info-block-item__title
      @media $display-breakpoints.sm-and-up
        margin-right: 0

  .info-text-in-max-11
    @media $display-breakpoints.md-and-up
      display: block
      max-width: 11em

  &_hover
    position: relative
    padding: 15px 0 0
    max-width: 14em
    margin: 0 auto
    @media $display-breakpoints.xs-only
      max-width: 22em
      & > h3
        display none

    &:hover
      .info-block-item__description-window
        opacity: 1

    .info-block-item__icon
      position: relative
      height: 59px

    .info-block-item__title
      margin-top: 32px
      line-height: 1.2
      padding: 0 20px
      color: $font-dark-grey
      font-size 1em
      font-weight 400
      margin-right 0
      @media $display-breakpoints.md-and-down
        padding: 0 10px
      @media only screen and (max-width: 399px)
        padding: 0
      &:first-child
        margin-top: 0

    .info-block-item__text
      position: relative
      padding: 0 20px
      margin-top: 22px
      @media $display-breakpoints.md-and-down
        padding: 0 10px
      @media only screen and (max-width: 399px)
        padding: 0

  &__description-window
    position: absolute
    z-index: 2
    left: 0
    width: 100%
    height: auto
    padding: 32px 0 32px
    background-color: $white
    transition: opacity $img-animation-time $img-animation-ease
    box-shadow: 0 7px 25px rgba($primary, .1)
    @media $display-breakpoints.sm-and-up
      top: -2em
      opacity: 0
    @media $display-breakpoints.xs-only
      position: relative
      box-shadow: none

    .info-block-item__title
      font-weight: 400
      color: $primary
      @media $display-breakpoints.sm-and-up
        font-size: (23/20)em