
.info-block-item
  position: relative
  width: 100%
  margin-left: auto
  margin-right: auto
  @media $display-breakpoints.sm-and-down
    max-width: 24rem
    margin-bottom: 40px
  @media $display-breakpoints.xs-only
    padding: 0 (28/$base-font-size)em

  &.small-icon
    .info-block-item__icon
      height: 70px
  &.narrow-left
    padding: 0 (14/$base-font-size)em 0 (44/$base-font-size)em

  &.narrow-xs
    padding: 0 44px

  &.max-17-xs
    @media $display-breakpoints.xs-only
      max-width: 17rem
  &.flex-start
    display: flex;
    align-items: center;
    & .info-block-item__text
      margin-top: 0;
    & .info-block-item__icon
      width: 60px;
      height: 60px;
      margin-right: 25px;
  .automate-text
    margin-left: auto
    margin-right: auto
    @media only screen and (max-width: 959px)
      text-align: center
  &:nth-child(1)
    .automate-text
      max-width: 8.1em
  &:nth-child(2)
    .automate-text
      max-width: 4.6em
  &:nth-child(3)
    .automate-text
      max-width: 6.6em
  &:nth-child(4)
    .automate-text
      max-width: 8em

  &__icon
    height: (85/$base-font-size)em
    background-repeat: no-repeat
    background-size: contain
    background-position: center

    &.ticks
      height: (20/$base-font-size)em
      background-position: left center
      @media $display-breakpoints.xs-only
        background-position: center center

    &.icon-left
      position: absolute
      top: 0
      left: 0
      height: 26px
      width: 26px
      background-position: left center

