.accordion-simple-area
  margin-top: 21px

  &__container
    padding 0 24px
    flex-grow 1
    margin auto
    width 100%
    height 100%
    @media $display-breakpoints.lg-and-up
      max-width 1188px
    @media $display-breakpoints.md-only
      max-width 944px

  .accordion-simple-head
    position: relative
    display: flex
    justify-content: space-between
    align-content: center

    &.nav-solo
      justify-content: center

    .is-title
      position: relative

    .is-nav
      position: relative
      display: flex
      justify-content: flex-start
      align-items: center
      color: $font-hover-orange
      transition: color $base-animation-time $base-animation-timing-function
      user-select: none

      & > span
        display: block

      .is-name
        position: relative
        color: currentColor

      .is-arrow
        position: relative
        margin-left: 16px
        width: 20px
        height: 10px
        transform: rotate(0deg)
        transition: transform $base-animation-time $base-animation-timing-function
        svg
          display: block
          width: 20px
          height: 10px
          path, rect,
          polygon
            fill: currentColor

    &:hover
      cursor: pointer

  .accordion-simple-body
    position: relative
    overflow: hidden
    padding: 0.02px
    max-height: 0
    transition: max-height 1s ease

    .info-block-area
      margin-top: 33px

  &.accordion-open
    .accordion-simple-head
      .is-nav
        color: $font-darken-grey
        .is-arrow
          transform: rotate(180deg)
    .accordion-simple-body
      max-height: 1500px