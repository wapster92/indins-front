.pagination
  position relative
  display flex
  justify-content center
  align-items center
  padding 70px 0 0

  &__prev-btn, &__next-btn
    position: absolute
    z-index: 1
    height: 100%
    top: 0
    display: flex
    justify-content: center
    align-items: center
    outline: none
    opacity: 1
    transition: opacity $base-animation-time $base-animation-timing-function
    user-select: none
    @media only screen and (max-width: 599px)
      display none

    &>svg
      display: block
      width: 45px
      height: 32px
      path, rect,
      polygon
        fill: $primary
        transition: fill $base-animation-time $base-animation-timing-function

    &:not(.pagination__next-btn_disabled)
      &:hover
        cursor: pointer
        &>svg
          path, rect,
          polygon
            fill: $font-hover-orange

    &_disabled
      cursor unset
      pointer-events none
      &>svg
        display: block
        width: 45px
        height: 32px
        path, rect,
        polygon
          fill: $font-light-grey

  &__prev-btn
    left: -95px
    @media $display-breakpoints.sm-only
      left: -9vw
  &__next-btn
    right: -95px
    @media $display-breakpoints.sm-only
      right: -9vw

  &__container
    position relative
    flex 1
    max-width 620px
    display flex
    justify-content center
    align-items center
    @media $display-breakpoints.md-and-down
      max-width 500px
    @media only screen and (max-width: 599px)
      flex-direction column
      align-items stretch
      max-width 100%

    &__pages-block
      display flex
      flex 1
      flex-direction row
      justify-content space-between

      &__page
        width 40px
        height 40px
        display flex
        justify-content center
        align-items center
        border 1px solid $btn-bg-color-hover
        color $font-dark-grey
        font-size 18px
        cursor pointer

        &:hover
          background-color: rgba(99, 126, 168, 0.15)

        &_active
          background-color: $btn-bg-color-hover
          color $white
          &:hover
            background-color: $btn-bg-color-hover
        &_filler
          border none
          cursor unset
          user-select none
          pointer-events none
          &:hover
            background-color inherit

    &__mobile-buttons
      width 100%
      display flex
      justify-content space-between
      align-items center
      margin-bottom 24px
      @media $display-breakpoints.sm-and-up
        display none

      &__prev-btn, &__next-btn
        display flex
        height 40px
        padding 0 27px
        justify-content center
        align-items center
        font-size 20px
        cursor pointer
        border 1px solid $btn-bg-color-hover
