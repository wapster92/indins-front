.horizon-item-block
  position: relative

  .is-head
    display: flex
    justify-content: flex-start
    align-items: center

    .icon
      position: relative
      flex: 0 0 auto
      width: 82px
      height: 82px
      @media $display-breakpoints.md-and-down
        width: 70px
        height: 70px

      &>span
        position: absolute
        width: 100%
        height: 100%
        top: 0
        left: 0
        background-repeat: no-repeat
        background-size: contain
        background-position: center

    .name
      flex: 1 1 auto
      font-size: 25px
      line-height: 1.5
      margin-left: 53px
      color: $primary
      @media $display-breakpoints.md-and-down
        font-size: 22px
        margin-left: 33px

  .is-text
    margin-top: 30px
    line-height: 1.2
    ul
      list-style-type circle
      li
        margin: 10px 0;
