.i-btn
  flex 1
  display flex
  justify-content center
  align-items center
  font-family $body-font-family
  font-size 21px
  font-weight 400
  color $white
  background-color $btn-bg-color
  border none
  outline none
  min-height 64px
  padding 4px
  transition all $base-animation-time $base-animation-timing-function
  user-select none
  overflow hidden
  position relative
  margin 6px 8px

  &:hover
    cursor pointer

  &_hover-gray
    &:hover
      background-color $btn-bg-color-hover-grey!important
  &_hover-blue
    &:hover
      background-color $btn-bg-color-hover!important

  &_disabled
    pointer-events none

  &_hide-border-on-hover
    &:hover
      box-shadow unset!important

  &__wave
    display inline-block
    position absolute
    opacity 0.6
    z-index 1
    top 0
    left 0
    height 0
    width 0
    border 2px solid currentColor
    border-radius 50%
    animation wave 0.5s ease-out forwards


@keyframes wave{
  0% {
    transform scale(0)
  }
  100% {
    opacity 0
    transform scale(100)
  }
}